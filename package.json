{
  "name": "cpp-viz-tool",
  "displayName": "C++ Viz Tool - Architect View", 
  "description": "Visualize C++ Code Flowchart & Project Dependency Graph. Best for Embedded/IoT.",
  "version": "1.0.1",
  "publisher": "CaSauCoin",  
  "icon": "https://github.com/CaSauCoin/Visualize_extension/blob/main/icon.png?raw=true",       
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "keywords": [             
    "cpp",
    "c++",
    "flowchart",
    "graph",
    "visualization",
    "embedded"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cpp-viz-tool.visualizeFile",
        "title": "Visualize Function (Flowchart)",
        "category": "C++ Viz"
      },
      {
        "command": "cpp-viz-tool.visualizeRepo",
        "title": "Visualize Project Structure",
        "category": "C++ Viz"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cpp-viz-tool.visualizeFile",
          "when": "resourceLangId == cpp || resourceLangId == c",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "cpp-viz-tool.visualizeRepo",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.3",
    "@vscode/vsce": "^2.19.0"
  },
  "repository": {  
    "type": "git",
    "url": "https://github.com/CaSauCoin/Visualize_extension.git"
  }
}